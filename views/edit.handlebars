
{{#each errors}}
<div class="container">
  <div class="alert alert-danger">{{text}}</div>
</div>
{{else}}
{{/each}}

<div class="container mt-5">
  <h4 class="mb-4">Edit Task</h4>
  <div class="row">
    <div class="col-lg-8">
      <div class="card card-body">
        <form action="/show_task/{{Key_Edit._id}}?_method=put" method="POST">
          <input type="hidden" name="_method" value="put">
          <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" name="title" id="title" value={{Key_Edit.title}}>
          </div>
          <div class="form-group">
            <label for="details">details</label>
            <textarea type="text" class="form-control" name="details" id="details">{{Key_Edit.details}}</textarea>
          </div>
          <button type="submit" class="btn btn-success">Edit</button>
        </form>
      </div>
    </div>
  </div>
</div>

